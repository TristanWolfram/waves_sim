<?xml version="1.0"?>
    <scenario>

        <!--
        LiDAR position on boat:
        null_> "0.0 0.0 0.0"
        Fisherboat-> "-1.0 3.0 0.0"
        ReseachBoat-> "-3.2 1.75 0.0"
        -->
    
        <static name="Fisherboat" type="model">
            <physical>
                <mesh filename="boats/fisher_boat_phys.obj" scale="1.0"/>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            </physical>
            <visual>
                <mesh filename="boats/fisher_boat.obj" scale="1.0"/>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            </visual>
            <material name="Boat"/>
            <look name="Fisherboat" uv_mode="0"/>
            <world_transform xyz="150.0 150.0 0.5" rpy="-1.57 0.0 -1.57"/>
        </static>

        <animated name="MovingBoat0" type="model" collition="true">
            <physical>
                <mesh filename="boats/res_boat_cube_phys.obj" scale="1.0"/>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            </physical>
            <visual>
                <mesh filename="boats/res_boat.obj" scale="1.0"/>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            </visual>
            <material name="Boat"/>
            <look name="LightGray"/>
            <trajectory type="spline" playback="repeat">
                <keypoint time="0.0" xyz="205.0 150.0 0.5" rpy="-1.57 0.0 -1.57"/>
                <keypoint time="30.0" xyz="205.0 10.0 0.5" rpy="-1.57 0.0 -1.57"/>
            </trajectory>
            <!--Color Cam-->
            <sensor name="Cam" rate="10.0" type="camera">
                <specs resolution_x="1280" resolution_y="720" horizontal_fov="90.0" />
                <noise depth="0.02" />
                <origin xyz="-3.2 1.75 0.0" rpy="0.0 1.57 3.14" />
                <ros_publisher topic="/sim_cam_color_0" />
            </sensor>
            <!--Front-->
            <sensor name="DcamF" rate="10.0" type="depthcamera">
                <specs resolution_x="512" resolution_y="256" horizontal_fov="90.0" depth_min="0.5" depth_max="170.0" />
                <origin xyz="-3.2 1.75 0.0" rpy="0.0 1.57 3.14" />
                <ros_publisher topic="/sim_camF_depth_0" />
            </sensor>
            <!--Right-->
            <sensor name="DcamR" rate="10.0" type="depthcamera">
                <specs resolution_x="512" resolution_y="256" horizontal_fov="90.0" depth_min="0.5" depth_max="170.0" />
                <origin xyz="-3.2 1.75 0.0" rpy="0.0 3.14 3.14" />
                <ros_publisher topic="/sim_camR_depth_0" />
            </sensor>
            <!--Left-->
            <sensor name="DcamL" rate="10.0" type="depthcamera">
                <specs resolution_x="512" resolution_y="256" horizontal_fov="90.0" depth_min="0.5" depth_max="170.0" />
                <origin xyz="-3.2 1.75 0.0" rpy="0.0 0.0 3.14" />
                <ros_publisher topic="/sim_camL_depth_0" />
            </sensor>
            <!--Back-->
            <sensor name="DcamB" rate="10.0" type="depthcamera">
                <specs resolution_x="512" resolution_y="256" horizontal_fov="90.0" depth_min="0.5" depth_max="170.0" />
                <origin xyz="-3.2 1.75 0.0" rpy="0.0 4.71 3.14" />
                <ros_publisher topic="/sim_camB_depth_0" />
            </sensor>

            <!-- GPS -->
            <sensor name="GPS" rate="1.0" type="gps">
                <noise ned_position="0.5"/>
                <history samples="1"/>
                <origin xyz="-3.2 1.75 0.0" rpy="0.0 0.0 0.0"/>
                <ros_publisher topic="/sim_gps_0" />
            </sensor>

            <!-- IMU -->
            <sensor name="IMU" rate="10.0" type="imu">
                <range angular_velocity="10.0 10.0 5.0" linear_acceleration="10.0"/>
                <noise angle="0.1 0.1 0.5" angular_velocity="0.05" yaw_drift="0.001" linear_acceleration="0.1"/>
                <history samples="1"/>
                <origin xyz="-3.2 1.75 0.0" rpy="-1.57 0.0 0.0"/>
                <ros_publisher topic="/sim_imu_0" />
            </sensor>
        </animated>

